# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# UI
GET     /@dos                                   dos.ui.MCP.index
GET     /@dos/browse                            dos.ui.MCP.browse

POST    /@dos/task/add                          dos.ui.Task.add
DELETE  /@dos/task/{id}                         dos.ui.Task.cancel
GET     /@dos/task/list/queued                  dos.ui.Task.list(what:'queued')
GET     /@dos/task/list/running                 dos.ui.Task.list(what:'running')
GET     /@dos/task/list/finished                dos.ui.Task.list(what:'finished')

# File Upload API
POST       /file/upload/{uid}                   dos.FileUpload.fileUpload
DELETE     /file/{id}                           dos.FileUpload.deleteFile

# File Download API
GET        /file/{id}                           dos.FileStore.get

# Image Cache API
GET        /image/cache                         dos.ImageCache.image
GET        /thumbnail/cache                     dos.ImageCache.thumbnail

# Image Display API
GET        /file/image/{id}                     dos.ImageDisplay.displayImage
GET        /thumbnail/{id}/{width}?             dos.ImageDisplay.displayThumbnail
GET        /thumbnail/{id}                      dos.ImageDisplay.displayThumbnail



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public